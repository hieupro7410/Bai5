@using Bai5.Models
@model List<Category>

@{
    ViewBag.Title = "CategoryPartial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategoryPartial</h2>
<style>
    #div-u {
        padding-top: 30px;
        margin-top: 50px;
        background-color: aquamarine;
        text-decoration: none;
    }

    .div-cate {
        height: 30px;
        width: 100%;
    }

    a {
        color: #a94442;
        text-decoration: none;
        font-size: x-large;
    }

        a:hover {
            text-decoration: none;
        }
</style>
<ul style="list-style-type:none" id="div-u">
    @{ foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.NameCate, "Index", "Product", new { category = item.IDCate.Trim() }, "")
            </li>

        }
    }
</ul>
